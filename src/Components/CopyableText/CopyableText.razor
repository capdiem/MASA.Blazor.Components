@namespace Masa.Blazor.Experimental.Components

<div class="text-no-wrap p-copyable-text @Class" style="@Style">
    <span class="p-copyable-text__content @ContentClass"
          style="@ContentStyle"
          @ref="Ref">
        @ChildContent
    </span>

    <MTooltip ContentClass="@TooltipClass"
              ContentStyle="@TooltipStyle"
              Disabled="@DisableTooltip" 
              Top>
        <ActivatorContent>
            <MIcon Class="p-copyable-text__icon"
                   Color="@CopyIconColor"
                   Disabled="_copying"
                   Small
                   OnClick="HandleOnCopy"
                   @attributes="@context.Attrs">
                @Icon
            </MIcon>
        </ActivatorContent>
        <ChildContent>
            @Tooltip
        </ChildContent>
    </MTooltip>
</div>