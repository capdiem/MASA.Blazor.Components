@page "/block-text-component"

<MRow>
    <MCol Cols="12">
        <BlockText Primary="MASA Blazor"
                   Secondary="A UI component library"
                   Tags="@tags">
        </BlockText>
    </MCol>
    <MCol Cols="12">
        <BlockText Primary="@DateOnly.FromDateTime(DateTime.Now).ToString()"
                   Secondary="@TimeOnly.FromDateTime(DateTime.Now).ToString()">
        </BlockText>
    </MCol>
    <MCol Cols="12">
        <BlockText>
            <PrimaryContent>
                <CopyableText>MASA.Blazor</CopyableText>
            </PrimaryContent>
            <SecondaryContent>
                <CopyableText>A UI component library</CopyableText>
            </SecondaryContent>
        </BlockText>
    </MCol>
</MRow>


@code {

    static IEnumerable<BlockTextTag> tags = new List<BlockTextTag>()
    {
        new("Blazor", "green", "white"),
        new("Material Design", "purple", true)
    };

}