@page "/actions-component"

<Actions DisplayCount="@displayCount">
    @if (showHeart)
    {
        <Action Icon="mdi-heart" Label="Heart"></Action>
    }

    <Action Icon="@eyeIcon"
            Label="@eyeLabel"
            OnClick="@(() => Log("查看"))">
    </Action>
    <Action Icon="mdi-pencil-outline"
            Visible="editVisible"
            Label="编辑"
            OnClick="@(() => Log("编辑"))">
    </Action>
    <Action Icon="mdi-delete-outline"
            Label="删除"
            OnClick="@(() => Log("删除"))">
    </Action>
</Actions>

<MDivider Class="my-2"></MDivider>

<MButtonGroup Dense>
    <MButton OnClick="Reduce">-</MButton>
    <MButton Disabled>@displayCount</MButton>
    <MButton OnClick="Increase">+</MButton>
</MButtonGroup>

<MButton Color="primary"
         OnClick="() => editVisible = !editVisible">
    Toggle Edit(@editVisible)
</MButton>

<MButton Color="primary"
         OnClick="() => eyeLabel += '.'">
    Append . to eye label
</MButton>

<MButton Color="primary"
         OnClick="ToggleEyeIcon">
    Toggle eye icon
</MButton>

@code {

    int displayCount = 2;
    bool editVisible = true;
    string eyeLabel = "查看";
    string eyeIcon = "mdi-eye";

    bool showHeart = true;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            showHeart = false;
            StateHasChanged();
        }
    }

    void Log(string value)
    {
        Console.WriteLine(value);
    }

    void ToggleEyeIcon()
    {
        if (eyeIcon == "mdi-eye")
        {
            eyeIcon += "-outline";
        }
        else
        {
            eyeIcon = "mdi-eye";
        }
    }

    void Reduce()
    {
        if (displayCount == 0) return;
        displayCount--;
    }

    void Increase()
    {
        displayCount++;
    }

}